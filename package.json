{
  "name": "report-bridge",
  "version": "1.0.0",
  "description": "Sistema Report Bridge com frontend, backend e mobile",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd frontend && npm start",
    "mobile": "cd mobile && npx expo start",
    "setup": "node scripts/setup.js",
    "install-all": "npm install && cd frontend && npm install && cd ../mobile && npm install",
    "dev-all": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "npm run build --prefix frontend"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "@supabase/supabase-js": "^2.38.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  },
  "keywords": ["report", "bridge", "dashboard", "supabase"],
  "author": "",
  "license": "MIT"
}
